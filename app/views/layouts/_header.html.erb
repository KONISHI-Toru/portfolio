<header class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
  <div class="container">
    <%= link_to t(:application_name), '#', id: "logo", class: "navbar-brand" %>
    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#Navber" aria-controls="Navber" aria-expanded="false" aria-label="ナビゲーションの切替">
      <span class="navbar-toggler-icon"></span>
    </button>

    <nav class="collapse navbar-collapse">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item"><%= link_to t(:home),   root_path, class: "nav-link" %></li>
	<% if controller.logged_in? %>
	  <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" role="button" data-toggle="dropdown" id="navbarDropdownMenuLink" aria-haspopup="true" aria-expanded="false"><%= t :admin %></a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
	      <%= render "admin/application/navigation", namespace: "admin" -%>
            </div>
	  </li>
          <li class="nav-item"><%= link_to t(:logout), logout_path, class: "nav-link", method: :delete %></li>
	<% else %>
          <li class="nav-item"><%= link_to t(:login), login_path, class: "nav-link" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
