<h1>ポートフォリオ</h1>

<%= form_with model: @portfolio_form, url: portfolio_show_path, method: :get, local: true, html:  { class: "form-horizontal" } do |f| %>

  <div class="form-group">
    <%= f.label :user_id, 'ユーザ:', class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.collection_select :user_id,
      User.all, :id, :name,
      {},
      {class: "form-control"} %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Show', class: "btn btn-primary", formtarget: "_blank" %>
    </div>
  </div>

<% end %>
