<% provide(:title, "Log in") %>
<h1><%= t :login %></h1>

<div class="row">
  <div class="mx-auto w-50">
    <%= form_for(:session, url: login_path) do |f| %>

      <div class="form-group row">
	<%= f.label t(:email), class: "col-sm-4 control-label" %>
	<%= f.email_field :email, class: 'col-sm-8 form-control' %>
      </div>

      <div class="form-group row">
	<%= f.label t(:password), class: "col-sm-4 control-label" %>
	<%= f.password_field :password, class: 'col-sm-8 form-control' %>
      </div>

      <%= f.submit t(:login), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
